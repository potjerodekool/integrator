<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="add-feedentry_category table" author="Evert Tigchelaar">
        <createTable tableName="feedentry_category">
            <column name="id" autoIncrement="true" type="INTEGER">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="feedentry_to_category">
            <column name="feedentry_id" type="INTEGER">
                <constraints nullable="false" referencedColumnNames="id" referencedTableName="feedentry"
                    foreignKeyName="feedentry_to_category_feedentry"
                />
            </column>
            <column name="category_id" type="INTEGER">
                <constraints nullable="false" referencedColumnNames="id" referencedTableName="feedentry_category"
                             foreignKeyName="feedentry_to_category_feedentry_category"
                />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>