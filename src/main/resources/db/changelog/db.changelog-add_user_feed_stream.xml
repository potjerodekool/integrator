<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="add-active-column" author="Evert Tigchelaar">
        <addColumn tableName="synd_feed_subscription">
            <column name="active" type="BOOLEAN" />
        </addColumn>
        <update tableName="synd_feed_subscription">
            <column name="active" valueBoolean="true" />
        </update>
    </changeSet>
    <changeSet id="active_column_not_null" author="Evert Tigchelaar">
        <addNotNullConstraint
                tableName="synd_feed_subscription"
                columnName="active"
                columnDataType="BOOLEAN"
        />
    </changeSet>

    <changeSet id="add-user" author="Evert Tigchelaar">
        <createTable tableName="user">
            <column name="user_id" autoIncrement="true" type="INTEGER">
                <constraints primaryKey="true"/>
            </column>
            <column name="ext_user_id" type="VARCHAR(250)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create_user_feed_stream_table" author="Evert Tigchelaar">
        <createTable tableName="user_feed_stream">
            <column name="user_feed_stream_id" autoIncrement="true" type="INTEGER">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="user_feed_stream_user_id"
                             referencedTableName="user"
                             referencedColumnNames="user_id"/>
            </column>
            <column name="name" type="VARCHAR(250)">
                <constraints nullable="false"   />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create_user_feed_stream_to_synd_feed_subscription_table" author="Evert Tigchelaar">
        <createTable tableName="user_feed_stream_to_synd_feed_subscription">
            <column name="user_feed_stream_id" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="ufs_id"
                             referencedTableName="user_feed_stream"
                             referencedColumnNames="user_feed_stream_id" />
            </column>
            <column name="synd_feed_subscription_id" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="sfs_id"
                             referencedTableName="synd_feed_subscription"
                             referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>