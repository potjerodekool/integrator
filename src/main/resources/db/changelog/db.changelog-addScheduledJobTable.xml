<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="add-ScheduledJob table" author="Evert Tigchelaar">
        <createTable tableName="scheduldjob">
            <column name="id" autoIncrement="true" type="INTEGER">
                <constraints primaryKey="true"/>
            </column>
            <column name="jobname" type="VARCHAR(250)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="started" type="DATETIME" />
            <column name="finished" type="DATETIME" />
            <column name="busy" type="BOOLEAN" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="message" type="VARCHAR(255)" />
        </createTable>
    </changeSet>
</databaseChangeLog>